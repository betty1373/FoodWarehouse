                            <DataGrid ItemsSource="{Binding Recipes}" Grid.Row="0" SelectedItem="{Binding SelectedRecipe,Mode=TwoWay}"
                                VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Name="recipes">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                                    <DataGridComboBoxColumn Header="Ingredient" DisplayMemberPath="Name" SelectedValuePath="IngredientId" ItemsSource="{Binding IngredientsModel.Ingredients}"/>
                                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
                                </DataGrid.Columns>
                            </DataGrid>                          
